<div class="relative h-screen md:flex">
  <!-- mobile menu bar -->
  <div class="bg-gray-800 text-gray-100 flex justify-between md:hidden">
    <!-- logo -->
    <div class="text-xl font-black p-4 text-white">AIRFRY.JS</div>

    <!-- mobile menu button -->
    <button class="mobile-menu-button p-4 focus:outline-none focus:bg-gray-700">
      <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <!-- sidebar -->
  <div class="sidebar bg-gray-700 text-blue-100 absolute inset-y-0 left-0 transform -translate-x-full md:relative md:translate-x-0 transition duration-200 ease-in-out overflow-y-auto px-6 pt-6">

    <!-- logo -->
    <a href="/" class="text-xl font-black text-white">AIRFRY.JS</a>

    <!-- nav -->
    <nav id="nav">

    </nav>
  </div>

  <div class="flex-1 prose prose-a:text-blue-600 overflow-y-auto max-w-none px-8 py-8">
    <% if (!Boolean(html)) { %>
    <span class="font-black">TODO</span>
    <% } else { %>
    <%- html %>
    <% } %>
    <div class="border border-1 w-full p-4 mt-8">
      <div>
        Up Next:
        <span class="ml-2" id="next">
        </span>
      </div>
    </div>
  </div>
</div>

<script entry>
  // hello

  const readJson = () => {
    fetch('/toc.json')
      .then(response => {
        if (!response.ok) {
          throw new Error("HTTP error " + response.status);
        }
        return response.json();
      })
      .then(json => {
        let nav = document.querySelector('#nav')
        let group = "";
        let html = "";
        let current;
        json.forEach((page, index) => {
          if (group != page.group) {
            group = page.group
            html += `<div class="mt-4 mb-1 font-thin uppercase">${page.group}</div>`
          }
          let prefix = "";
          if (window.location.pathname + window.location.search == "/" + page.url + "/") {
            prefix = "before:content-['|'] before:mr-1";
            current = index;
          }
          html += `<a class="${prefix} block rounded transition duration-200 hover:bg-blue-700 hover:text-white px-2 py-1" href="/${page.url}/">${page.title}</a>`
        });
        nav.innerHTML = html;
        html = ""
        let next;
        if (current < json.length - 1) {
          next = json[current + 1]
        }
        let nextElement = document.querySelector('#next')
        if (next) {
          nextElement.innerHTML = `<a href="/${next.url}/">${next.title}</a>`
          // nextElement.style.display = "block"
        }
      })
      .catch(error => {
        console.log(error);
      })
  }

  readJson();
</script>


